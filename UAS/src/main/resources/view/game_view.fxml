<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

    <GridPane fx:id="rootPane" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azri.wordle.controller.GameController">
        <columnConstraints>
            <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="0" />
            <javafx.scene.layout.ColumnConstraints minWidth="600" prefWidth="600" maxWidth="600" hgrow="NEVER" />
            <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="0" />
        </columnConstraints>
        <rowConstraints>
            <javafx.scene.layout.RowConstraints percentHeight="100.0"/>
        </rowConstraints>

        <!-- Left Spacer (Col 0) -->
        <Region GridPane.columnIndex="0" style="-fx-background-color: transparent;"/>
        <Label text="ESC to Leave" style="-fx-text-fill: grey; -fx-padding: 10;" GridPane.columnIndex="0" GridPane.valignment="TOP" GridPane.halignment="LEFT"/>

        <!-- Main Game Content (Col 1) -->
        <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1" styleClass="game-container">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- Header Stats -->
            <HBox alignment="CENTER" spacing="40">
                <Label fx:id="scoreLabel" text="Words: 0" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                <VBox alignment="CENTER">
                     <Label fx:id="bulletCountLabel" text="Bullets: 1/6" style="-fx-text-fill: #ff6b6b; -fx-font-weight: bold;"/>
                     <Label fx:id="uniqueLettersLabel" text="Trigger: 0/6" style="-fx-text-fill: lightgray; -fx-font-size: 12;"/>
                </VBox>
            </HBox>

            <!-- Feedback Area -->
            <Label fx:id="feedbackLabel" text="" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-min-height: 30;"/>

            <!-- The Word Grid -->
            <GridPane fx:id="wordGrid" hgap="5" vgap="5" alignment="CENTER">
                <!-- Populated by Controller -->
            </GridPane>

            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Virtual Keyboard -->
            <VBox fx:id="keyboardContainer" alignment="CENTER" spacing="5">
                 <!-- Populated dynamically by Controller or Hardcoded here -->
            </VBox>
            
            <Label text="Use Keyboard to Type. ENTER to Submit." style="-fx-text-fill: gray;"/>
        </VBox>

        <!-- Right Spacer (Col 2) -->
        <Region GridPane.columnIndex="2" style="-fx-background-color: transparent;"/>
    </GridPane>

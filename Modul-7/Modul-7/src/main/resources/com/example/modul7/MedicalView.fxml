<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.modul7.MedicalController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sistem Rekam Medis Sederhana" />

    <GridPane hgap="10" vgap="10">
        <Label text="No. Rekam Medis:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtId" promptText="Contoh: RM-001" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Nama Pasien:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtNama" promptText="Nama Lengkap" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Keluhan:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtKeluhan" promptText="Keluhan Utama" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Diagnosa:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtDiagnosa" promptText="Diagnosa Dokter" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Tindakan/Obat:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="txtTindakan" promptText="Resep Obat" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Tanggal:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="txtTanggal" promptText="YYYY-MM-DD" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleSave" text="Simpan" />
        <Button onAction="#handleUpdate" text="Update" />
        <Button onAction="#handleDelete" text="Hapus" />
        <Button onAction="#handleClear" text="Clear" />
    </HBox>

    <TableView fx:id="tableMedis" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80" text="ID RM" />
            <TableColumn fx:id="colNama" prefWidth="150" text="Nama Pasien" />
            <TableColumn fx:id="colKeluhan" prefWidth="100" text="Keluhan" />
            <TableColumn fx:id="colDiagnosa" prefWidth="100" text="Diagnosa" />
            <TableColumn fx:id="colTindakan" prefWidth="120" text="Tindakan" />
            <TableColumn fx:id="colTanggal" prefWidth="100" text="Tanggal" />
        </columns>
    </TableView>

    <Label fx:id="lblStatus" style="-fx-text-fill: grey;" text="Pilih data untuk melihat info ringkas" />
</VBox>
